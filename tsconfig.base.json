{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@socket/main-service-modules-app-install": [
                "libs/main-service-modules/app-install/src/index.ts"
            ],
            "@socket/main-service-modules-logger": [
                "libs/main-service-modules/logger/src/index.ts"
            ],
            "@socket/main-service-modules-monitor": [
                "libs/main-service-modules/monitor/src/index.ts"
            ],
            "@socket/main-service-modules-redis": [
                "libs/main-service-modules/redis/src/index.ts"
            ],
            "@socket/main-service-modules-udp-player": [
                "libs/main-service-modules/udp-player/src/index.ts"
            ],
            "@socket/main-service-modules/teranex": [
                "libs/main-service-modules/teranex/src/index.ts"
            ],
            "@socket/main-service-modules/types": [
                "libs/main-service-modules/types/src/index.ts"
            ],
            "@socket/main-service-server": [
                "libs/main-service/server/src/index.ts"
            ],
            "@socket/main-service/types": [
                "libs/main-service/types/src/index.ts"
            ],
            "@socket/node-services-logger": [
                "libs/node-services/logger/src/index.ts"
            ],
            "@socket/node-services-teranex": [
                "libs/node-services/teranex/src/index.ts"
            ],
            "@socket/node-services/types": [
                "libs/node-services/types/src/index.ts"
            ],
            "@socket/shared-types": ["libs/shared/types/src/index.ts"],
            "@socket/shared-utils": ["libs/shared/utils/src/index.ts"],
            "config": ["config.json"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
